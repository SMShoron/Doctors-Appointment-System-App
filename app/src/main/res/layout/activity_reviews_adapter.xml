<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_homebuttons"
    android:orientation="vertical"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="8dp"
        android:weightSum="4">

        <TextView
            android:id="@+id/reveiwDoctorName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:fontFamily="@font/allerta"
            android:text="Dr. Ahmed"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/reveiwDoctorRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:fontFamily="@font/allerta"
            android:gravity="center"
            android:paddingEnd="8dp"
            android:text="5.6"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/allerta"
            android:padding="8dp"
            android:text="Comment : "
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/reviewMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/allerta"
            android:padding="8dp"
            android:textSize="12sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/reveiwerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:paddingEnd="30dp"
        android:text="by_anonymous" />
</LinearLayout>