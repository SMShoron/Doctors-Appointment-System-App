<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GetAppointmentConfirmation">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:fontFamily="@font/allerta"
                    android:gravity="center"
                    android:text="Confirm Appointment"
                    android:textColor="@color/colorAcceptButton"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:fontFamily="@font/allerta"
                    android:text="Appointment Informations"
                    android:textColor="@color/colorformtitle"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/colorCard1"
                    android:paddingTop="10dp">

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">

                        <TableRow
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_margin="5dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/allerta"
                                android:gravity="start"
                                android:padding="5dp"
                                android:text="Serial No."
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/serialConfText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/allerta"
                                android:padding="5dp"
                                android:text="serial"
                                android:textSize="18sp" />
                        </TableRow>

                        <TableRow>

                            <TextView
                                android:layout_margin="5dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/allerta"
                                android:gravity="start"
                                android:padding="5dp"
                                android:text="Time"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/timeConfText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/allerta"
                                android:padding="5dp"
                                android:text="time"
                                android:textSize="18sp" />

                        </TableRow>

                        <TableRow>

                            <TextView
                                android:layout_margin="5dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/allerta"
                                android:gravity="start"
                                android:padding="5dp"
                                android:text="Appointment Date"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/dateConfText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/allerta"
                                android:padding="5dp"
                                android:text="date"
                                android:textSize="18sp" />

                        </TableRow>

                        <TableRow>

                            <TextView
                                android:layout_margin="5dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/allerta"
                                android:gravity="start"
                                android:padding="5dp"
                                android:text="Patient Name"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/nameConfText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/allerta"
                                android:padding="5dp"
                                android:text="name"
                                android:textSize="18sp" />

                        </TableRow>

                        <TableRow>

                            <TextView
                                android:layout_margin="5dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/allerta"
                                android:gravity="start"
                                android:padding="5dp"
                                android:text="Age"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/ageConfText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/allerta"
                                android:padding="5dp"
                                android:text="age"
                                android:textSize="18sp" />
                        </TableRow>

                        <TableRow>

                            <TextView
                                android:layout_margin="5dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/allerta"
                                android:gravity="start"
                                android:padding="5dp"
                                android:text="Gender"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/genderConfText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/allerta"
                                android:padding="5dp"
                                android:text="gender"
                                android:textSize="18sp" />
                        </TableRow>

                        <TableRow>

                            <TextView
                                android:layout_margin="5dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/allerta"
                                android:gravity="start"
                                android:padding="5dp"
                                android:text="Blood Group"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/bloodgroupConfText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/allerta"
                                android:padding="5dp"
                                android:text="bloodgroup"
                                android:textSize="18sp" />
                        </TableRow>

                        <TableRow>

                            <TextView
                                android:layout_margin="5dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/allerta"
                                android:gravity="start"
                                android:padding="5dp"
                                android:text="Symptoms"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/symptomsConfText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/allerta"
                                android:padding="5dp"
                                android:text="symptoms"
                                android:textSize="18sp" />
                        </TableRow>

                        <TableRow>

                            <TextView
                                android:layout_margin="5dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/allerta"
                                android:gravity="start"
                                android:padding="5dp"
                                android:text="Phone"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/phoneConfText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/allerta"
                                android:padding="5dp"
                                android:text="phone no."
                                android:textSize="18sp" />
                        </TableRow>

                        <TableRow>

                            <TextView
                                android:layout_margin="5dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/allerta"
                                android:gravity="start"
                                android:padding="5dp"
                                android:text="Address"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/addressConfText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/allerta"
                                android:padding="5dp"
                                android:text="address"
                                android:textSize="18sp" />
                        </TableRow>

                        <TableRow>

                            <TextView
                                android:layout_margin="5dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/allerta"
                                android:gravity="start"
                                android:padding="5dp"
                                android:text="Doctor Name"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/doctornameConfText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/allerta"
                                android:padding="5dp"
                                android:text="doctorname"
                                android:textSize="18sp" />
                        </TableRow>
                    </TableLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:paddingVertical="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/allerta"
                        android:gravity="center"
                        android:text="Sure Want to Continue?"
                        android:textSize="22sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="right"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/confirmAppointment"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:layout_marginHorizontal="20dp"
                            android:background="@color/colorAcceptButton"
                            android:fontFamily="@font/allerta"
                            android:text="Confirm"
                            android:textAllCaps="false" />

                        <Button
                            android:id="@+id/cancelAppointment"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:background="@color/colorDiscardButton"
                            android:fontFamily="@font/allerta"
                            android:text="Cancel"
                            android:textAllCaps="false" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>